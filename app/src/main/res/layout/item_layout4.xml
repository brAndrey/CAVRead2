<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGreen"
    android:divider="@color/colorAccent"
    android:dividerHeight="10dp"
    >
    <!--
    android:baselineAlignedChildIndex="0"
    android:divider="@color/colorAccent"
    android:dividerHeight="@dimen/twodp"-->


    <TextView
        android:id="@+id/engWord_il4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="@dimen/list_test_size"
        android:textColor="@android:color/black"
        />

    <TextView
        android:id="@+id/translate_il4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/engWord_il4"
        android:textColor="@android:color/background_dark" />

    <TextView
        android:id="@+id/rusWord_il4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/engWord_il4"
        android:layout_toLeftOf="@id/lesson_il4"
        android:layout_marginRight="@dimen/list_test_size"
        android:textColor="@android:color/black"
        />


    <TextView
        android:id="@+id/lesson_il4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/engWord_il4"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:textColor="@android:color/black" />

